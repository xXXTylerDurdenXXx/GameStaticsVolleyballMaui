<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameStaticsVolleyballMaui.MainPage">

    <VerticalStackLayout
        Padding="24"
        Spacing="20"
        VerticalOptions="Center">

        <Label Text="Управление данными"
               FontSize="24"
               HorizontalOptions="Center"
               FontAttributes="Bold" />

        <Button Text="👥 Игроки"
                FontSize="18"
                Command="{Binding OpenPlayersCommand}" />

        <Button Text="🏆 Команды"
                FontSize="18"
                Command="{Binding OpenTeamsCommand}" />

    </VerticalStackLayout>
</ContentPage>
