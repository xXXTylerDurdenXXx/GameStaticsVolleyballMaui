<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameStaticsVolleyballMaui.View.PlayersPage"
             Title="Игроки">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить"
                     Command="{Binding CreateCommand}" />
    </ContentPage.ToolbarItems>

    <CollectionView ItemsSource="{Binding Players}"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems>
                            <SwipeItem Text="Удалить"
                                       BackgroundColor="Red"
                                       Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Page}}"
                                       CommandParameter="{Binding .}" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Grid Padding="12">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding BindingContext.SelectCommand, Source={x:Reference Page}}"
                                CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <VerticalStackLayout>
                            <Label Text="{Binding FullName}"
                                   FontSize="18"
                                   FontAttributes="Bold" />

                            <Label Text="{Binding TeamName}" />

                            <HorizontalStackLayout Spacing="12">
                                <Label Text="№" />
                                <Label Text="{Binding Number}" />
                                <Label Text="{Binding PositionName}" />
                            </HorizontalStackLayout>

                            <Label FontSize="12"
                                   TextColor="Gray"
                                   Text="{Binding Height, StringFormat='Рост: {0}'}" />
                        </VerticalStackLayout>
                    </Grid>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>